{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "https://codeberg.org/margau/renovate-defaults/raw/branch/main/default.json"
  ],
  "packageRules": [
    {
      "matchFileNames": [
        ".forgejo/workflows/commitlint.yaml",
        ".forgejo/workflows/lint.yaml",
        ".forgejo/workflows/publish.yaml",
        ".forgejo/workflows/container.yaml",
        "Containerfile"
      ],
      "enabled": false
    },
    {
      "matchFileNames": [
        ".forgejo/workflows/commitlint.yaml",
        ".forgejo/workflows/lint.yaml",
        ".forgejo/workflows/publish.yaml",
        ".forgejo/workflows/container.yaml",
        "Containerfile"
      ],
      "matchManagers": [
        "copier"
      ],
      "enabled": true
    },
    {
      "matchManagers": [
        "docker-compose"
      ],
      "matchUpdateTypes": [
        "pin",
        "digest"
      ],
      "enabled": false
    },
    {
      "matchManagers": [
        "copier"
      ],
      "separateMinorPatch": true
    },
    {
      "matchManagers": [
        "copier"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true
    }
  ]
}
